# This port is ppc440
PORT = ppc440

# Set compiler for this project:
#  GNU C    = GCC
#  MetaWare = MW
COMPILER = GCC

# Set root path and include base make file
RELROOT = ../../../
include $(RELROOT)make/common.mak

# --------------------------------------------------------------------------

# Set target file name
TARGET = test

# Set source files
SRC_TXT = $(RELROOT)examples/test.c  init.c  start.s
SRC_OBJ =
SRC_LIB =

# Set the directory that contains the configuration header files
#DIR_CONFIG = ports\ppc440\test

ifeq '$(COMPILER)' 'MW'

# Set section map file
MAPFILE = sect_mw.map

else

# Set section map file
MAPFILE = sect_gcc.map

# Do not link standard library
LDFLAGS := -nostdlib $(LDFLAGS)

endif

# ---------------------------------------------------------------------------

# Build an executable
include $(MAKE_OUT)

